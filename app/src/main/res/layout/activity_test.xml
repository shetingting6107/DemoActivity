<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_compare1"
            android:layout_width="50dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="compareToIgnoreCase"/>

        <EditText
            android:id="@+id/et_compare2"
            android:layout_width="50dp"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btn_get"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="getResult"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_top_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TOP_ACTIVITY"/>

    <TextView
        android:id="@+id/tv_top_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="计时器：(计数单位：s)"
        android:textSize="17sp"
        android:textColor="@color/color_black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="总时长："
            android:textSize="14sp"
            android:textColor="@color/color_black"/>

        <EditText
            android:id="@+id/et_time1"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:inputType="number"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="间隔时长："
            android:textSize="14sp"
            android:textColor="@color/color_black"/>

        <EditText
            android:id="@+id/et_time2"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:inputType="number"/>

        <Button
            android:id="@+id/btn_start"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:text="Time Count Start"/>

    </LinearLayout>

    <Button
        android:id="@+id/btn_time_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>